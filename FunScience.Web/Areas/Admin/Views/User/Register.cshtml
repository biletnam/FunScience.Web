@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
    ViewData.AddActivePage(AdminNavPages.Register);
}

<h2>@ViewData["Title"]</h2>

@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-10">
        <form class="form-horizontal" method="post">
            <fieldset>
                <div class="form-group">
                    <div style="text-align: center" asp-validation-summary="All" class="text-danger"></div>
                    <label class="col-md-4 control-label" asp-for="Email"></label>
                    <div class="col-md-4">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-envelope fa-fw"></i>
                            </div>
                            <input placeholder="Email адрес" class="form-control input-md" asp-for="Email">
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="FirstName"></label>
                    <div class="col-md-4">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-user fa-fw">
                                </i>
                            </div>
                            <input asp-for="FirstName" class="form-control input-md" placeholder="Име" >
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="LastName"></label>
                    <div class="col-md-4">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-user fa-fw">
                                </i>
                            </div>
                            <input asp-for="LastName" class="form-control input-md" placeholder="Фамиля" >
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="Password"></label>
                    <div class="col-md-4">
                        <div class="input-group othertop">
                            <div class="input-group-addon">
                                <i class="fa fa-key fa-fw"></i>
                            </div>
                            <input asp-for="Password" class="form-control input-md" >
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="ConfirmPassword"></label>
                    <div class="col-md-4">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-key fa-fw"></i>
                            </div>
                            <input class="form-control input-md" asp-for="ConfirmPassword">
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-success">
                            <span class="glyphicon glyphicon-thumbs-up"></span> Запиши
                        </button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


