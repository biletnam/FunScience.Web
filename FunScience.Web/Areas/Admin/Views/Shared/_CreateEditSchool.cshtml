@model SchoolViewModel

@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-10">
        <form class="form-horizontal" method="post">
            <fieldset>
                <div class="form-group">
                    <div style="text-align: center" asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label class="col-md-4 control-label" asp-for="Name"></label>
                    <div class="col-md-4">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-graduation-cap fa-fw">
                                </i>
                            </div>
                            <input type="text" class="form-control input-md" placeholder="Училище" asp-for="Name">
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="Director"></label>
                    <div class="col-md-4">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-briefcase fa-fw">
                                </i>
                            </div>
                            <input type="text" class="form-control input-md" placeholder="Директор" asp-for="Director">
                        </div>
                        <span asp-validation-for="Director" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="Lat"></label>
                    <div class="col-md-4">
                        <div class="input-group othertop">
                            <div class="input-group-addon">
                                <i class="fa fa-map-o fa-fw">
                                </i>
                            </div>
                            <input type="text" placeholder="Латитюд" class="form-control input-md" asp-for="Lat">
                        </div>
                        <span asp-validation-for="Lat" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="Lng"></label>
                    <div class="col-md-4">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-map-o fa-fw"></i>
                            </div>
                            <input type="text" placeholder="Лонгитют" class="form-control input-md" asp-for="Lng">
                        </div>
                        <span asp-validation-for="Lng" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-4">
                        @if (ViewData["Title"].ToString() == "Добавяна на училище")
                        {
                            <button type="submit" asp-area="Admin" asp-controller="School" asp-action="Create" class="btn btn-success">
                                <span class="glyphicon glyphicon-thumbs-up"></span>Запиши
                            </button>
                            <a asp-area="Admin" asp-controller="School" asp-action="AddSchool" class="btn btn-danger"><span class="glyphicon glyphicon-remove-sign"></span>Изчисти</a>

                        }
                        else if (ViewData["Title"].ToString() == "Редактиране на училище")
                        {
                            <button type="submit" asp-area="Admin" asp-controller="School" asp-action="Edit" class="btn btn-success">
                                <span class="glyphicon glyphicon-thumbs-up"></span>Запиши
                            </button>
                            <a asp-area="Admin" asp-controller="School" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-danger"><span class="glyphicon glyphicon-remove-sign"></span>Изчисти</a>

                        }
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>


