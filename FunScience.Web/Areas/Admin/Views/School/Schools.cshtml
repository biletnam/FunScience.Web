@model IEnumerable<SchoolListingModel>

@{
    ViewData["Title"] = "Списък училища";
    ViewData.AddActivePage(AdminNavPages.ListOfSchools);
    int counter = 1;
}

<h2>@ViewData["Title"]</h2>

<div class="row">

    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Име</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() != 0)
            {
                foreach (var school in Model)
                {
                    <tr class="table-warning">
                        <th scope="row">@(counter++)</th>
                        <td>@school.Name</td>
                        <td>
                            <a asp-area="Admin" asp-controller="School" asp-action="SchoolInfo" asp-route-id="@school.Id" class="btn btn-primary btn-sm">View</a>
                            <a asp-area="Admin" asp-controller="School" asp-action="Edit" asp-route-id="@school.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-area="Admin" asp-controller="School" asp-action="Delete" asp-route-id="@school.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" style="text-align: center;">Няма регистрирани училища.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
