@using Microsoft.AspNetCore.Identity
@using FunScience.Data.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<style>
    div > ul li:hover ul {
        display: block;
        font-size: 1.1em;
    }

        div > ul li:hover ul a:hover {
            color: #5fcf80;
        }
</style>

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" asp-route-id="@UserManager.GetUserId(User)" title="Manage">Здравей, @UserManager.GetUserName(User)!</a>
            </li>
            @if (User.IsInRole(GlobalConstants.AdministratorRole))
            {
                <li>
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" title="Home">Панел</a>
                </li>
            }
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Излез</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right" role="navigation">
        <li><a href="#feature">Повезе за нас</a></li>
        <li><a href="/repertoire">Репертоар</a></li>

        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                Дейности
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li><a href="/activities/testshow">Тест - шоу за IV клас</a></li>
                <li><a href="/activities/festiveperformances">Празнични представления</a></li>
                <li><a href="/activities/dramalessons">Драма уроци</a></li>
                <li><a href="/activities/theaterschool">Театрална школа</a></li>
                <li><a href="/activities/foreignlanguagedramatraining">Чуждоезиково драма обучение</a></li>
                <li><a href="/activities/trainingforstudents">Тренинг за ученици</a></li>
                <li><a href="/activities/teachertraining">Обучение на учители</a></li>
                <li><a href="/activities/privateparty">Частно парти</a></li>
            </ul>
        </li>
        <li><a href="#faculity-member">Състав</a></li>
        <li><a href="/contacts">Контакти</a></li>
        <li class="btn-trial"><a href="#" data-target="#login" data-toggle="modal">Влез</a></li>
    </ul>
}
